@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

code {
  font-family: source-code-pro, Menlo, Monaco, Consolas, 'Courier New',
    monospace;
}

/* ========== UTILITÁRIOS NEOMORPHISM & GLASSMORPHISM ========== */

/* Reset e base neomorphism */
* {
  box-sizing: border-box;
}

/* Theme variables */
:root {
  /* Light mode colors - cinza muito escuro */
  --neo-bg: #1a1a1a;
  --neo-surface: #2a2a2a;
  --neo-primary: #4a90e2;
  --neo-secondary: #7b8ca6;
  --neo-bg-gradient-start: #1a1a1a;
  --neo-bg-gradient-end: #151515;
  --neo-shadow-light: #2a2a2a;
  --neo-shadow-dark: #0f0f0f;
}

.dark {
  /* Dark mode colors - cinza muito escuro */
  --neo-bg: #1a1a1a;
  --neo-surface: #2a2a2a;
  --neo-primary: #60a5fa;
  --neo-secondary: #94a3b8;
  --neo-bg-gradient-start: #1a1a1a;
  --neo-bg-gradient-end: #151515;
  --neo-shadow-light: #2a2a2a;
  --neo-shadow-dark: #0f0f0f;
}

body {
  margin: 0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: linear-gradient(145deg, var(--neo-bg-gradient-start), var(--neo-bg-gradient-end));
  min-height: 100vh;
  transition: background-color 0.3s ease;
}

/* Utilitários glassmorphism */
.glass {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.glass-strong {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(15px);
  -webkit-backdrop-filter: blur(15px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

/* Animações suaves */
.transition-neo {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Otimizações de performance */
.glass,
.glass-strong {
  will-change: opacity;
  transform: translateZ(0); /* Force hardware acceleration */
}

/* Fallbacks para browsers sem backdrop-filter */
@supports not (backdrop-filter: blur(10px)) {
  .glass {
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .glass-strong {
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(0, 0, 0, 0.15);
  }
}
